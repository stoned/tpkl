#
env TASK_SLEEP_DURATION=3

! exec tpkl run -t 500ms cmd-sleep
stderr 'task timed out'

! exec tpkl run -t 500ms sh-sleep
stderr 'task timed out'

! exec tpkl run -t 500ms bash-sleep
stderr 'task timed out'

#
env TASK_SLEEP_DURATION=1

exec tpkl run -t 1m cmd-sleep
! stderr 'task timed out'

exec tpkl run -t 1m sh-sleep
! stderr 'task timed out'

exec tpkl run -t 1m bash-sleep
! stderr 'task timed out'
